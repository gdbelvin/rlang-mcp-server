{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MCP Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/r-server",
      "args": []
    },
    {
      "name": "Test Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${file}"
    },
    {
      "name": "Test All",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/..."
    },
    {
      "name": "Test Protocol",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/...",
      "args": ["-tags=protocol"]
    },
    {
      "name": "Test Integration",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/...",
      "args": ["-tags=integration"]
    }
  ]
}
